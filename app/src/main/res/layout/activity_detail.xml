<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DefaultLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgd"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/todayInfoLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/locationLayout"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <com.ant.liao.GifView
                android:id="@+id/loc_ref_Icon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/pin_dot"
                android:layout_marginRight="5sp" />

            <TextView
                android:id="@+id/countryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="ZZZZZZZ"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/curStation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="XXXXXXXXXX"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10sp" />

        <TextView
            android:id="@+id/curtel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:text="YYYYYYYYYY"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textColor="#FFFFFF"
            android:textSize="85sp"
            android:gravity="center"
            android:id="@+id/curStates" />

        <TextView
            android:id="@+id/curPM"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PM"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="AOI"
            android:id="@+id/curAQI"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="PublishTime"
            android:id="@+id/curPublishTime"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/futureInfoLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="2">

        <LinearLayout
            android:id="@+id/nd1Layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nd1Week"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Tue"
                android:layout_marginTop="45sp" />

            <TextView
                android:id="@+id/nd1TempC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*22~27°C"
                android:layout_marginTop="10sp" />

            <TextView
                android:id="@+id/nd1Desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Clear"
                android:layout_marginTop="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nd2Layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nd2Week"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Wed"
                android:layout_marginTop="45sp" />

            <TextView
                android:id="@+id/nd2TempC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*18~20°C"
                android:layout_marginTop="10sp" />

            <TextView
                android:id="@+id/nd2Desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Cloudy"
                android:layout_marginTop="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nd3Layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/nd3Week"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|bottom"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Thu"
                android:layout_marginTop="45sp" />

            <TextView
                android:id="@+id/nd3TempC"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*20~25°C"
                android:gravity="center|top"
                android:layout_marginTop="10sp" />

            <TextView
                android:id="@+id/nd3Desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:text="*Sunny"
                android:gravity="center|top"
                android:layout_marginTop="10sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>